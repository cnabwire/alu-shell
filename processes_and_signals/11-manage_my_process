#!/usr/bin/env bash
# Check if manage_my_process is running
is_running() {
    [ -f "/var/run/my_process.pid" ] && kill -0 $(cat /var/run/my_process.pid) 2>/dev/null
}

case "$1" in
    start)
        if is_running; then
            echo "manage_my_process is already running."
        else
            /path/to/manage_my_process start
        fi
        ;;
    stop)
        if is_running; then
            /path/to/manage_my_process stop
        else
            echo "manage_my_process is not running."
        fi
        ;;
    restart)
        /path/to/manage_my_process restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
iesac

